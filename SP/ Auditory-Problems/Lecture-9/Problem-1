#include <iostream>

using namespace std;

int factorial(int n){
    if(n==0){
        return 1;
    } else {
        return n * factorial(n-1);
    }
}
int sumOfK(int k){
    if(k==0){
        return 0;
    } else {
        return k + sumOfK(k-1);
    }
}

int main(){
    int n, result = 0;
    cin>>n;
    if(n>0){
        for(int i = 1;i<n;i++){
            int sum = sumOfK(i);
            result += factorial(sum);
            cout<<sum<<"! + ";
        }
        int sum = sumOfK(n);
        result += factorial(sum);
        cout<<sum<<"! = "<<result<<endl;
    } else {
        cout<<"Wrong input!"<<endl;
    }
    return 0;
}
