#include <iostream>
using namespace std;

int main() {
    double num1, num2, result;
    char op;
    cout << "Enter two numbers and an operator (e.g., 5 + 3): ";
    cin >> num1 >> op >> num2;
    switch (op) {
        case '+':
            result = num1 + num2;
            break;
        case '-':
            result = num1 - num2;
            break;
        case '*':
            result = num1 * num2;
            break;
        case '/':
            if (num2 != 0) {
                result = num1 / num2;
            } else {
                cout << "Division by 0 is not allowed." << endl;
                return 1;
            }
            break;
        default:
            cout << "Unknown operator." << endl;
            return 1;
    }
    cout << num1 << ' ' << op << ' ' << num2 << " = " << result << endl;
    return 0;
}
