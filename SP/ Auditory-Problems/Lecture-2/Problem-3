#include <iostream>
using namespace std;

int main() {
    float a = 5.0;
    float b = 7.5;
    float c = 10.2;
    float perimeter = a + b + c;
    float s = perimeter / 2;
    float area = s * (s - a) * (s - b) * (s - c);
    cout << "The perimeter is: " << perimeter << endl;
    cout << "The area square is: " << area << endl;
    return 0;
}
